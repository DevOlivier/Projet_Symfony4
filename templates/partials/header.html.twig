<!--HEADER-->

<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" 
        data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" 
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                 <li class="nav-item">
                    <a class="nav-link" href="{{ path('homePage') }}">Accueil</a>
                </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('ad') }}">Annonces</a>
                </li>
                
            </ul>
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                     <li class="nav-item dropdown">
                       <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"
                        id="accountDropdownLink">
                        <img src="{{app.user.picture}}" class="avatarMini" alt="avatar de {{app.user.firstName}}
                        {{app.user.lastName}}"> Bonjour {{app.user.firstName}} {{app.user.lastName}}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                            <a href=" {{path('account_index')}} " class="dropdown-item">Mon compte</a>
                            <a href=" {{path('account_profil')}} " class="dropdown-item">Modifier mon profil</a>
                            <a href=" {{path('account_password')}} " class="dropdown-item">Changer mon mot de passe</a>
                            <div class="dropdown-divider"></div>
                            <a href=" {{path('account_logout')}} " class="dropdown-item">Déconnexion</a>
                        </div>
                    </li>
                {% else %}
                     <li class="nav-item">
                        <a href="{{ path('account_register') }}" class="nav-link">Créer un compte</a>
                    </li>
                    <li class="nav-item">
                        <a href=" {{ path('account_login') }} " class="nav-link">Se connecter</a>
                    </li>
                {% endif %} 
            </ul>
        </div>
    </nav>

        {% for label, message in app.flashes %}
            <div class="container mt-3">
                <div class="alert alert-{{ label }}">
                {% for message in message %}
                    <p> {{ message | raw }} </p>
                {% endfor %}
                </div>
            </div>
        {% endfor %}
