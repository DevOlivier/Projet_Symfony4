                        <a href=" {{path('admin_ads_edit' , {'id' : ad.id}  )}} "
                        class="btn btn-success btn-edit-admin">
                        <i class="fas fa-edit"></i>
                        </a>
                        <a href=" {{path('admin_ads_delete' , {'id' : ad.id} )}} " 
                        class="btn btn-danger btn-delete-admin"> 
                        <i class="fas fa-trash"></i> </a>
                    </td>
                </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}