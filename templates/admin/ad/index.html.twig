{% block title %} Espace administration {% endblock %}
{% block body %}
    <div class="container-fluid">
        <h1 class="mt-5 text-center">Gestion des annonces</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>RÃ©servation</th>
                    <th>Action</th>
                <tr>
            </thead>
            <tbody>
                <tr>
                    <!--une ligne pour chaque annonce-->
                    {% for ad in ads %}
                    <td> {{ad.id}} </td>
                    <td> {{ad.title}} </td>
                    <td> <img src=" {{ad.author.picture}} " alt="avatar_author" class="img-admin"> 
