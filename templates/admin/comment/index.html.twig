{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="mt-5 text-center">Gestion des commentaires</h1>

        <table class="table table mt-5">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th></th>
                </tr>
            <thead>
            <tbody>
                {% for comment in comments %}
                <tr>
                    <td> {{comment.id}} </td>
                    <td> {{comment.createdAt | date('d/m/Y')}} </td>
                    <td>  <img src=" {{comment.author.picture}} " class="img-admin">
                    {{comment.author.firstName}}
                    </img 
                    {{comment.author.lastName}} </td>
                    <td> {{comment.content}} </td>
                    <td> {{comment.rating}} </td>
                    <td> {{comment.ad.title}} </td>
                    <td>
                        <a href=" {{path('admin_comment_delete' , {'id' : comment.id} )}} " 
                        class="btn btn-danger btn-delete-admin"> 
                        <i class="fas fa-trash"></i> </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
